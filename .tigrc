set main-view = \
    line-number:no \
    id:yes \
    date:relative-compact \
    author:display=abbreviated,width=4 \
    commit-title:graph=v2,refs=true

set tree-view = \
    line-number:no \
    mode:yes \
    file-name:yes \
    file-size:display=units \
    date:relative-compact \
    id:yes \
    author:full

set blame-view = \
    file-name:no \
    id:yes \
    date:relative-compact \
    author:full \
    line-number:yes,interval=1 \
    text

set refs-view = \
    line-number:no \
    id:yes \
    date:relative-compact \
    author:full \
    ref \
    commit-title

set line-graphics = utf-8
